<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="540.0" prefWidth="600.0" spacing="8.0" stylesheets="@../common.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.edu.ur.pz.clinicapp.views.PatientsView">
   <children>
      <HBox alignment="CENTER_LEFT">
         <children>
            <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Szukaj: " />
                  <TextField fx:id="searchTextField" onAction="#searchAction" />
               </children>
            </HBox>
         </children>
      </HBox>
      <TableView fx:id="table" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
        <columns>
          <TableColumn fx:id="nameCol" maxWidth="150.0" minWidth="80.0" text="Imię" />
          <TableColumn fx:id="surnameCol" maxWidth="200.0" minWidth="80.0" prefWidth="100.0" text="Nazwisko" />
            <TableColumn fx:id="peselCol" maxWidth="80.0" minWidth="80.0" resizable="false" text="PESEL" />
            <TableColumn fx:id="phoneCol" maxWidth="65.0" minWidth="65.0" prefWidth="65.0" resizable="false" text="Telefon" />
            <TableColumn fx:id="emailCol" maxWidth="200.0" minWidth="150.0" prefWidth="150.0" text="E-mail" />
            <TableColumn fx:id="addressCol" maxWidth="300.0" minWidth="100.0" prefWidth="300.0" text="Adres" />
        </columns>
      </TableView>
      <HBox alignment="CENTER_LEFT">
         <children>
            <HBox alignment="CENTER" spacing="8.0" HBox.hgrow="ALWAYS">
               <children>
                  <Button fx:id="registerButton" mnemonicParsing="false" onAction="#register" prefWidth="200.0" text="Dodaj pacjenta">
                     <padding>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                     </padding>
                  </Button>
                  <Button fx:id="markUnreadButton" disable="true" mnemonicParsing="false" prefWidth="200.0" text="Przejdź do szczegółów">
                     <padding>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                     </padding>
                  </Button>
               </children>
            </HBox>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
   </padding>
</VBox>
