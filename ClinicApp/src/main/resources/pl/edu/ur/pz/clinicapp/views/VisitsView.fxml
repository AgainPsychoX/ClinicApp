<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<VBox fx:id="vBox" prefHeight="540.0" prefWidth="600.0" spacing="8.0" stylesheets="@../common.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.edu.ur.pz.clinicapp.views.VisitsView">
   <children>
      <HBox alignment="CENTER_LEFT">
         <children>
            <ComboBox fx:id="filter" prefWidth="150.0" value="Nadchodzące wizyty">
               <items>
                  <FXCollections fx:factory="observableArrayList">
                     <String fx:value="Nadchodzące wizyty"/>
                     <String fx:value="Przeszłe wizyty"/>
                  </FXCollections>
               </items>
            </ComboBox>
            <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Szukaj: " />
                  <TextField fx:id="searchTextField" onAction="#searchEnterAction" />
               </children>
            </HBox>
         </children>
      </HBox>
      <TableView fx:id="table" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" onMouseClicked="#sortAction">
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
        <columns>
          <TableColumn fx:id="dateCol" maxWidth="200.0" prefWidth="100.0" text="Termin"/>
          <TableColumn fx:id="doctorCol" maxWidth="200.0" prefWidth="100.0" text="Lekarz" />
            <TableColumn fx:id="specCol" maxWidth="200.0" prefWidth="100.0" text="Specjalizacja" />
        </columns>
      </TableView>
      <HBox alignment="CENTER_LEFT">
         <children>
            <HBox alignment="CENTER" spacing="8.0" HBox.hgrow="ALWAYS">
               <children>
                  <Button fx:id="newButton" mnemonicParsing="false" onAction="#newAction" prefWidth="200.0" text="Umów nową">
                     <padding>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                     </padding>
                  </Button>
               </children>
            </HBox>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
   </padding>
</VBox>
