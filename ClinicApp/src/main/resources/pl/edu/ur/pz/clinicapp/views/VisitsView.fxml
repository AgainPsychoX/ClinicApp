<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox fx:id="vBox" prefHeight="540.0" prefWidth="600.0" spacing="8.0" stylesheets="@../common.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.edu.ur.pz.clinicapp.views.VisitsView">
   <children>
      <HBox alignment="CENTER_LEFT">
         <children>
            <ComboBox prefWidth="150.0" promptText="Nadchodzące wizyty" />
            <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Szukaj: " />
                  <TextField fx:id="searchTextField" onAction="#searchEnterAction" />
               </children>
            </HBox>
         </children>
      </HBox>
      <TableView fx:id="table" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" onSort="#sortAction">
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
        <columns>
          <TableColumn fx:id="dateCol" maxWidth="200.0" prefWidth="100.0" text="Termin" />
          <TableColumn fx:id="doctorCol" maxWidth="200.0" prefWidth="100.0" text="Lekarz" />
            <TableColumn fx:id="specCol" maxWidth="200.0" prefWidth="100.0" text="Specjalizacja" />
        </columns>
      </TableView>
      <HBox alignment="CENTER_LEFT">
         <children>
            <HBox alignment="CENTER" spacing="8.0" HBox.hgrow="ALWAYS">
               <children>
                  <Button fx:id="newButton" mnemonicParsing="false" onAction="#newAction" prefWidth="200.0" styleClass="my-primary-button" text="Umów nową">
                     <padding>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                     </padding>
                  </Button>
                  <Button fx:id="rescheduleButton" disable="true" mnemonicParsing="false" onAction="#rescheduleAction" prefWidth="200.0" styleClass="my-primary-button" text="Przełóż">
                     <padding>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                     </padding>
                  </Button>
                  <Button fx:id="cancelButton" disable="true" mnemonicParsing="false" onAction="#cancelAction" prefWidth="200.0" styleClass="my-primary-button" text="Odwołaj">
                     <padding>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                     </padding>
                  </Button>
               </children>
            </HBox>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
   </padding>
</VBox>
